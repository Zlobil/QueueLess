@{
    ViewData["Title"] = "Home";
}

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold">Wait smart. Not in line.</h1>

    <p class="lead mt-4 col-lg-8 mx-auto">
        QueueLess lets you track your position in a virtual queue without standing in a physical line.
        Perfect for salons, service centers, clinics, and public offices.
    </p>

    <div class="mt-5">
        <a class="btn btn-primary btn-lg me-3" asp-controller="Queue" asp-action="Create">Create a Queue</a>
        <a class="btn btn-outline-primary btn-lg" asp-controller="Queue" asp-action="Active">View Active Queues</a>
    </div>
</div>

<div class="mt-6 pt-5">
    <h3 class="text-center mb-4">How it works</h3>

    <div class="row text-center">
        <div class="col-md-4">
            <h5 class="fw-semibold">Business creates a queue</h5>
            <p class="text-muted">Set up a virtual queue for your service in seconds.</p>
        </div>

        <div class="col-md-4">
            <h5 class="fw-semibold">Clients join remotely</h5>
            <p class="text-muted">Customers join the queue via a link or QR code.</p>
        </div>

        <div class="col-md-4">
            <h5 class="fw-semibold">Everyone tracks progress</h5>
            <p class="text-muted">Businesses manage the flow, clients wait stress-free.</p>
        </div>
    </div>
</div>
