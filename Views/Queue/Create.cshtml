@{
    ViewData["Title"] = "Create a New Queue";
}

<h1 class="mb-4">Create a New Queue</h1>

<form>
    <div class="mb-3">
        <label class="form-label">Service Location</label>
        <select class="form-select">
            <option selected disabled>Select service location</option>
            <option>AutoFix Garage</option>
            <option>City Auto Service</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Queue Name</label>
        <input class="form-control" placeholder="e.g. Oil Change & Maintenance" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea class="form-control" rows="3" placeholder="Optional description of the service"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Average Service Time (minutes)</label>
        <input type="number" class="form-control" min="1" max="240" />
    </div>

    <div class="form-check mb-4">
        <input class="form-check-input" type="checkbox" checked />
        <label class="form-check-label">Queue is open</label>
    </div>

    <button class="btn btn-success">Create Queue</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
