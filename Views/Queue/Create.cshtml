@model QueueCreateViewModel

@{
    ViewData["Title"] = "Create a New Queue";
}

<h1 class="mb-4">Create a New Queue</h1>
<form asp-action="Create" method="post">
    <partial name="_ValidationSummaryPartial" />
    <div class="mb-3">
        <label asp-for="ServiceLocationId" class="form-label"></label>
        <select asp-for="ServiceLocationId"
                class="form-select"
                asp-items="@(new SelectList(Model.ServiceLocations, "Id", "Name"))">
            <option value="">Select service location</option>
        </select>
        <span asp-validation-for="ServiceLocationId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="AverageServiceTimeMinutes" class="form-label"></label>
        <input asp-for="AverageServiceTimeMinutes" type="number" class="form-control" />
        <span asp-validation-for="AverageServiceTimeMinutes" class="text-danger"></span>
    </div>
    <div class="form-check mb-4">
        <input asp-for="IsOpen" class="form-check-input" />
        <label asp-for="IsOpen" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-success">Create Queue</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}