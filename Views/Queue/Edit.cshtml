@{
    ViewData["Title"] = "Edit Queue";
}

<h1 class="mb-4">Edit Queue</h1>

<form>
    <div class="mb-3">
        <label class="form-label">Queue Name</label>
        <input class="form-control" value="Auto Service – Oil Change" />
    </div>

    <div class="mb-3">
        <label class="form-label">Average Service Time (minutes)</label>
        <input type="number" class="form-control" value="15" />
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select class="form-select">
            <option selected>Open</option>
            <option>Closed</option>
        </select>
    </div>

    <button class="btn btn-warning">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
