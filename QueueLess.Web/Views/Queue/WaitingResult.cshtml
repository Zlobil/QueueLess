@using QueueLess.ViewModels.Queue
@model QueueWaitingResultViewModel

@{
    ViewData["Title"] = "Queue Result";
}

<div class="text-center mt-5">
    @if (Model.State == "served")
    {
        <h2 class="text-success">You have been served successfully.</h2>
    }
    else if (Model.State == "skipped")
    {
        <h2 class="text-warning">You missed your turn.</h2>
    }
    else if (Model.State == "expired")
    {
        <h2 class="text-secondary">Your session expired.</h2>
    }
    else
    {
        <h2 class="text-danger">Queue no longer available.</h2>
    }
    <a href="/" class="btn btn-primary mt-4">Back to home</a>
</div>
