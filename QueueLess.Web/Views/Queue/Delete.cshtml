@using QueueLess.ViewModels.Queue
@model QueueDeleteViewModel

@{
    ViewData["Title"] = "Delete Queue";
}

<h1 class="mb-4 text-danger">Delete Queue</h1>

<partial name="_ValidationSummaryPartial" />

<div class="alert alert-warning">
    Are you sure you want to delete this queue?
    This action cannot be undone.
</div>

<div class="mb-4">
    <div class="card-body">
        <strong>@Model.Name</strong>
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <p class="text-muted mb-0">@Model.Description</p>
        }
    </div>
</div>

<form asp-action="Delete" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
