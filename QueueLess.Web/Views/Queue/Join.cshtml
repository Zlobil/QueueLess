@using QueueLess.ViewModels.Queue
@model QueueJoinViewModel

@{
    ViewData["Title"] = "Join Queue";
}

<h1 class="mb-3">Join Queue</h1>

<p class="text-muted mb-4">
    You are joining:
    <strong>@Model.QueueName</strong>
</p>

<form asp-action="Join" method="post">
    <input type="hidden" asp-for="QueueId" />
    <div class="mb-3">
        <label class="form-label">Your Name</label>
        <input class="form-control" asp-for="ClientName" />
        <span asp-validation-for="ClientName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Join Queue</button>
    <a asp-action="Public" asp-route-id="@Model.QueueId" class="btn btn-secondary ms-2">Cancel</a>
</form>