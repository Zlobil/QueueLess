@using QueueLess.ViewModels.Queue
@model IEnumerable<MyQueuesViewModel>

@{
    ViewData["Title"] = "My Queues";
}

<h1 class="mb-4">My Queues</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Queue</a>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr class="align-middle">
                <th>Name</th>
                <th class="col-md-1">Status</th>
                <th class="col-md-2">Created On</th>
                <th class="col-md-2">Avg. Service Time</th>
                <th class="col-md-1">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var queue in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@queue.Id" class="text-decoration-none">
                            <strong>@queue.Name</strong>
                            @if (!string.IsNullOrWhiteSpace(queue.Description))
                            {
                                <div class="text-muted small">@queue.Description</div>
                            }
                        </a>
                    </td>

                    <td class="text-center">
                        <span class="badge @(queue.IsOpen ? "bg-success" : "bg-danger")">
                            @(queue.IsOpen ? "Open" : "Closed")
                        </span>
                    </td>
                    <td>@queue.CreatedOn.ToString("dd MMM yyyy")</td>
                    <td>@queue.AverageServiceTimeMinutes min</td>
                    <td class="text-center">
                        <div class="d-flex flex-column flex-md-row gap-1 justify-content-center">
                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@queue.Id">Edit</a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@queue.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <p class="text-muted mt-3">You haven't created any queues yet.</p>
}